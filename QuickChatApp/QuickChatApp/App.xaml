<Application x:Class="QuickChatApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuickChatApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Font/Montserrat-VariableFont_wght.ttf#Montserrat"/>
        </Style>
        <Style x:Key="BaseInputStyle" TargetType="Control">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Font/Montserrat-VariableFont_wght.ttf#Montserrat"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#5B5B5B"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="0 5 0 7"/>
        </Style>
        <Style TargetType="Grid"> <!--фон-->
            <Setter Property="Background" Value="#EEEEEE"/>
        </Style>
        <Style x:Key="AppTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}"> <!--Заголовок-->
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E39774"/>
            <Setter Property="Margin" Value="0 0 0 30"/>
        </Style>
        <!-- Стиль для заголовка "Авторизация" -->
        <Style x:Key="AuthTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="#5C9EAD"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для кнопки входа -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C9EAD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0 20 0 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ссылки "Зарегистрироваться" -->
        <Style x:Key="LinkTextStyle" TargetType="Hyperlink" >
            <Setter Property="Foreground" Value="#E39774"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}">
            <Setter Property="Foreground" Value="#5C9EAD"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5"
                            Background="#EEEEEE"
                            BorderBrush="#5C9EAD"
                            BorderThickness="1.5">
                            <ScrollViewer x:Name="PART_ContentHost"
                              Margin="5"
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        <!-- Стиль для поля пароля -->
        <Style x:Key="RoundedPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource BaseInputStyle}">
            <Setter Property="Foreground" Value="#5C9EAD"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="PasswordChar" Value="*"/>
            <Setter Property="Foreground" Value="#5C9EAD"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5"
                            Background="#EEEEEE"
                            BorderBrush="#5C9EAD"
                            BorderThickness="1.5">
                            <ScrollViewer x:Name="PART_ContentHost"
                              Margin="5"
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        
        
        <!-- Стиль для списка чатов -->
        <Style x:Key="ChatListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <SolidColorBrush x:Key="ChatItemBorderColor" Color="#FFD9D9D9"/>
        <SolidColorBrush x:Key="ChatItemSelectedBorderColor" Color="#FFFF9800"/>
        <Thickness x:Key="ChatItemBorderThickness">1</Thickness>
        <CornerRadius x:Key="ChatItemCornerRadius">5</CornerRadius>
        
        <!-- Стиль для элементов списка чатов -->
        <Style x:Key="ChatItemStyle" TargetType="ListBoxItem">
            
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="Border"
                            BorderThickness="{StaticResource ChatItemBorderThickness}"
                            CornerRadius="{StaticResource ChatItemCornerRadius}"
                            BorderBrush="{StaticResource ChatItemBorderColor}"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ChatItemSelectedBorderColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>                       


        <!-- Стиль для сообщений -->
        <Style x:Key="MessageStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="MaxWidth" Value="400"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Стиль для поля ввода сообщения -->
        <Style x:Key="MessageInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D8DEE9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"
                                         VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки отправки -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5C9EAD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                            <TextBlock Text="💬" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="18"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Application.Resources>
</Application>
