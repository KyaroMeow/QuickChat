<Page x:Class="QuickChatApp.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuickChatApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatPage">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Chat List -->
        <DockPanel Grid.Column="0">
            <!-- Header with Menu Button -->
            <Border DockPanel.Dock="Top" 
                    Background="{StaticResource BackgroundColor}" 
                    Padding="10,8">
                <DockPanel>
                    <Button x:Name="MenuButton" 
        DockPanel.Dock="Left" 
        Style="{StaticResource IconButtonStyle}" 
        Width="30" 
        Height="30"
        Click="MenuButton_Click">

                        <TextBlock Text="☰" 
               FontSize="24" 
               Foreground="{StaticResource TextSecondaryColor}"/>
                    </Button>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center">
                        <TextBlock Text="QuickChat" 
                                   Style="{StaticResource AppTitleStyle}" 
                                   Padding="0" 
                                   Margin="0"/>
                        <Image Source="/Assets/Images/icon.png" 
                               Width="32" 
                               Height="35" 
                               Margin="0" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Chat Search and List -->
            <Border Style="{StaticResource SidebarStyle}"
                    DockPanel.Dock="Top">
                <DockPanel Margin="10,10,4,10">
                    <DockPanel DockPanel.Dock="Top">
                        <Button DockPanel.Dock="Right" 
                                VerticalAlignment="Center" 
                                Style="{StaticResource AddChatButtonStyle}" 
                                Margin="5,0,0,0"/>

                        <Border Style="{StaticResource SearchContainerStyle}">
                            <DockPanel>
                                <Image Source="/Assets/Images/search.png" 
                                       Width="15" 
                                       Height="15" 
                                       Margin="5" />
                                <TextBox Style="{StaticResource SearchBoxStyle}"
                                         Text="Поиск чатов"
                                         Margin="0,4"/>
                            </DockPanel>
                        </Border>
                    </DockPanel>
 
                    <!-- ChatPage.xaml (измененная часть) -->
                    <ListBox x:Name="ChatsList" 
         Style="{StaticResource ChatListStyle}"
         ItemContainerStyle="{StaticResource ChatItemStyle}"
         ItemsSource="{Binding Contacts}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="28" Height="28" Fill="{Binding AvatarColor}"/>
                                    <StackPanel Margin="10,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource ContactNameStyle}"/>
                                        <TextBlock Text="{Binding LastMessage}" Style="{StaticResource LastMessageStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </DockPanel>

        <!-- Right Panel: Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="3" Style="{StaticResource ChatAreaStyle}">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="43"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border BorderBrush="{StaticResource PrimaryColor}" 
                            BorderThickness="0,0,0,1">
                        <DockPanel Grid.Row="0" Margin="4,2">
                            <Ellipse Style="{StaticResource AvatarStyle}" 
                                     DockPanel.Dock="Left"/>
                            <StackPanel DockPanel.Dock="Left" 
                                        Margin="5,0" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="Анна Петрова" 
                                           Style="{StaticResource ChatTitleStyle}"/>
                                <TextBlock Text="в сети" 
                                           Style="{StaticResource LastMessageStyle}"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Messages Area -->
                    <ScrollViewer Grid.Row="1" 
                                  Style="{StaticResource MessagesScrollViewerStyle}"
                                  x:Name="MessagesScrollViewer">
                        <StackPanel x:Name="MessagesPanel" Margin="2">
                            <!-- Incoming Message -->
                            <Border Style="{StaticResource IncomingMessageStyle}">
                                <StackPanel>
                                    <TextBlock Text="Привет! Как дела? Давно не виделись!" 
                                               Style="{StaticResource MessageTextStyle}"/>
                                    <TextBlock Text="14:32" 
                                               Style="{StaticResource MessageTimeStyle}"/>
                                </StackPanel>
                            </Border>

                            <!-- Outgoing Message -->
                            <Border Style="{StaticResource OutgoingMessageStyle}">
                                <StackPanel>
                                    <TextBlock Text="Привет! Все отлично, спасибо! А у тебя как?" 
                                               Style="{StaticResource OutgoingMessageTextStyle}"/>
                                    <TextBlock Text="14:35" 
                                               Style="{StaticResource OutgoingMessageTimeStyle}"/>
                                </StackPanel>
                            </Border>

                            <!-- Incoming Message -->
                            <Border Style="{StaticResource IncomingMessageStyle}">
                                <StackPanel>
                                    <TextBlock Text="Тоже все хорошо! Может встретимся на выходных?" 
                                               Style="{StaticResource MessageTextStyle}"/>
                                    <TextBlock Text="14:40" 
                                               Style="{StaticResource MessageTimeStyle}"/>
                                </StackPanel>
                            </Border>

                            <!-- Outgoing Message -->
                            <Border Style="{StaticResource OutgoingMessageStyle}">
                                <StackPanel>
                                    <TextBlock Text="Отличная идея! Давай в субботу встретимся в парке в 2 часа?" 
                                               Style="{StaticResource OutgoingMessageTextStyle}"/>
                                    <TextBlock Text="14:42" 
                                               Style="{StaticResource OutgoingMessageTimeStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Message Input -->
                    <Border Grid.Row="2" 
                            Background="Transparent" 
                            Padding="5" 
                            BorderBrush="{StaticResource PrimaryColor}" 
                            BorderThickness="0,1,0,0">
                        <DockPanel>
                            <Button DockPanel.Dock="Right" 
                                    Style="{StaticResource SendButtonStyle}" 
                                    Margin="5,0,0,0"
                                    Click="SendButton_Click"/>
                            <TextBox x:Name="MessageInput" 
                                     Style="{StaticResource MessageInputStyle}"
                                     Text="Введите сообщение..."/>
                        </DockPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!--  Popup  -->
        <Popup x:Name="SidebarPopup"
       Placement="Relative"
       AllowsTransparency="True"
       StaysOpen="False"
       HorizontalOffset="0"
       VerticalOffset="0"
       IsOpen="False">
            <Grid x:Name="OverlayGrid" 
          Width="{Binding ActualWidth, ElementName=RootGrid}"
          Height="{Binding ActualHeight, ElementName=RootGrid}"
          Background="#80000000"
          MouseLeftButtonDown="OverlayGrid_MouseLeftButtonDown">

                <Border Width="240"
                Background="White"
                HorizontalAlignment="Left">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок с кнопкой закрытия -->
                        <Border Grid.Row="0" 
                        Background="{StaticResource PrimaryColor}"
                        Padding="15,10">
                            <DockPanel>
                                <Button DockPanel.Dock="Right"
                                Style="{StaticResource IconButtonStyle}"
                                Click="CloseSidebarButton_Click">
                                    <Image Source="/Assets/Images/close.png" Width="15" Height="15"/>
                                </Button>
                                <TextBlock Text="Меню" 
                                   Foreground="{StaticResource WhiteColor}"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                            </DockPanel>
                        </Border>

                        <!-- Основное содержимое сайдбара -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20,15">
                                <!-- Аватар и имя пользователя -->
                                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                                    <Ellipse Width="70" Height="70" Fill="{StaticResource SecondaryColor}">
                                        <Ellipse.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Иван Иванов" 
                                       Margin="0,10,0,0"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                                    <TextBlock Text="online" 
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       FontSize="12"
                                       HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Кнопочки -->
                                <Button Content="Настройки профиля" 
        Style="{StaticResource SidebarButtonStyle}"
        Margin="0,5"
        Click="OpenProfileEditPopup_Click"/>
                                <Button Content="Список контактов" 
        Style="{StaticResource SidebarButtonStyle}"
        Margin="0,5"
        Click="ContactsListButton_Click"/>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- Кнопка выхода -->
                        <!-- Обновите кнопку выхода в сайдбаре -->
                        <Button Grid.Row="2"
        Content="Выйти из аккаунта" 
        Style="{StaticResource LogoutButtonStyle}"
        Margin="20,0,20,20"
        HorizontalAlignment="Stretch"
        Click="LogoutButton_Click"/>
                        <!-- Добавьте этот Click -->
                    </Grid>
                </Border>
            </Grid>

        </Popup>
        <!-- Popup contacts -->
        <Popup x:Name="ContactsPopup"
       Style="{StaticResource ContactsPopupStyle}"
       IsOpen="False">
            <Border Style="{StaticResource ModalWindowStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Шапка окна -->
                    <Border Style="{StaticResource ModalHeaderStyle}"
                    Grid.Row="0">
                        <DockPanel>
                            <TextBlock Text="Список контактов"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource WhiteColor}"/>
                            <Button DockPanel.Dock="Right"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseContactsPopup_Click"/>
                        </DockPanel>
                    </Border>

                    <!-- Содержимое окна -->
                    <ScrollViewer Grid.Row="1"
                          Padding="15">
                        <StackPanel>
                            <!-- Заглушка для списка контактов -->
                            <TextBlock Text="Здесь будет список контактов"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,50"
                               Foreground="{StaticResource TextSecondaryColor}"/>

                            <!-- Пример контакта -->
                            <Border Background="{StaticResource BackgroundColor}"
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="{StaticResource SecondaryColor}"/>
                                    <StackPanel Margin="10,0">
                                        <TextBlock Text="Пример Примерыч" Style="{StaticResource ContactNameStyle}"/>
                                        <TextBlock Text="online" Style="{StaticResource LastMessageStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Popup>
        <!-- Добавьте этот Popup в ChatPage.xaml -->
        <Popup x:Name="LogoutConfirmationPopup"
       Style="{StaticResource ContactsPopupStyle}"
       IsOpen="False">
            <Border Style="{StaticResource ModalWindowStyle}"
            Width="300">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Text="Подтверждение выхода"
                       Grid.Row="0"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

                    <!-- Текст сообщения -->
                    <TextBlock Text="Вы уверены, что хотите выйти из аккаунта?"
                       Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">
                        <Button x:Name="ConfirmLogoutButton"
                        Content="Да"
                        Style="{StaticResource ConfirmationButtonStyle}"
                        Click="ConfirmLogoutButton_Click"/>
                        <Button Content="Нет"
                        Style="{StaticResource CancelButtonStyle}"
                        Click="CancelLogoutButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>
        <!-- Добавьте этот Popup в ChatPage.xaml -->
        <Popup x:Name="ProfileEditPopup"
       Style="{StaticResource ContactsPopupStyle}"
       IsOpen="False">
            <Border Style="{StaticResource ModalWindowStyle}"
            Width="320">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок и кнопка закрытия -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Редактировать профиль"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                        <Button DockPanel.Dock="Right"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseProfileEditPopup_Click"/>
                    </DockPanel>

                    <!-- Аватарка -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Ellipse Width="80" Height="80" Fill="{StaticResource SecondaryColor}">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.2"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <Button Content="Изменить аватарку" 
                        Style="{StaticResource AvatarChangeStyle}"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Поле для ника -->
                    <TextBlock Text="Изменить ник" 
                       Grid.Row="2"
                       Style="{StaticResource LastMessageStyle}"
                       Margin="5,0"/>

                    <TextBox x:Name="NicknameTextBox"
                     Grid.Row="3"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     Margin="0,5,0,20"
                     Text="Текущий ник"/>

                    <!-- Кнопка применения -->
                    <Button Grid.Row="5"
                    Content="Применить"
                    Style="{StaticResource LoginButtonStyle}"
                    HorizontalAlignment="Center"
                    Click="ApplyProfileChanges_Click"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</Page>